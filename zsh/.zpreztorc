# color output
zstyle ':prezto:*:*' color 'yes'

# modules (order matters)
zstyle ':prezto:load' pmodule \
    'environment' \
    'terminal' \
    'editor' \
    'history' \
    'directory' \
    'spectrum' \
    'utility' \
    'completion' \
    'syntax-highlighting' \
    'autosuggestions' \
    'prompt'

# keymap
zstyle ':prezto:module:editor' key-bindings 'emacs'

# prompt theme
zstyle ':prezto:module:prompt' theme 'pure'
